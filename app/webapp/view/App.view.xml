    xmlns:tnt="sap.tnt"
    xmlns="sap.m"
    height = "100%">

    <tnt:ToolPage id="toolPage">
		<tnt:header>
			<tnt:ToolHeader id="_IDGenToolHeader1">
                <Image id="IdGenImage2" height = "1.5rem"
                     class="sapUiSmallMarginBegin"
                     src="view/img/logo.svg" press=".onHome"/>
                <MenuButton enabled="true" text="메뉴" buttonMode="Split" width="auto">
                    <menu>
                        <Menu>
                            <MenuItem text ="BP" press=".onBPmain"/> 
                            <MenuItem text ="DOC" press=".onDocmain"/> 
                            <MenuItem text="GL" press=".onGL" />
                        </Menu>
                    </menu>
                </MenuButton>
            </tnt:ToolHeader>
		</tnt:header>

		<tnt:mainContents>
            <App id="app">
            </App>

		</tnt:mainContents>
	</tnt:ToolPage>
</mvc:View>
