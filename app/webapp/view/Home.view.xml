<mvc:View controllerName="project1.controller.Home"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:f="sap.f"
    xmlns:w="sap.ui.integration.widgets"
    xmlns:card="sap.f.cards"
    xmlns:l="sap.ui.layout">
    <ScrollContainer height="100%" width="100%" vertical="true" focusable="true">
        <Panel width="auto" class="sapUiResponsiveMargin" accessibleRole="Region">
            <content class="panelbottomline">
                <HBox width="100%" height="3rem">
                    <Title text=""/>
                </HBox>    
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="BP 마스터 데이터 &#10;관리" press="onBP_list">
                    <TileContent>
                        <ImageContent src="sap-icon://menu" />
                    </TileContent>
                </GenericTile>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="G/L 계정과목 마스터 &#10;관리" press="onGL_list">
                    <TileContent>
                        <ImageContent src="sap-icon://menu" />
                    </TileContent>
                </GenericTile>
                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" header="전표 조회" press="onDoc_list">
                    <TileContent>
                        <ImageContent src="sap-icon://menu" />
                    </TileContent>
                </GenericTile>
                <HBox width="100%" height="3rem"/>
                <HBox width="100%" height="3rem">
                    <Title text="Overview"/>
                </HBox>
                <HBox>

                    <VBox>

                        <l:Grid containerQuery="true">
                            <VBox class="sapUiMediumMargin">
                                <f:Card  width="300px">
                                    <f:header>
                                        <card:Header title="BP 고객마스터 목록" subtitle="Immediately Due net" />
                                    </f:header>
                                    <f:content> 
                                        <List showSeparators="None" items="{path: 'BPModel>/'}">
                                        <CustomListItem type="Active">
                                            <HBox alignItems="Center" justifyContent="SpaceBetween">
                                                <VBox>
                                                    <CheckBox text="{BPModel>BP_name}"/>
                                                </VBox>
                                                <VBox class="sapUiSmallMarginBegin sapUiSmallMarginEnd sapUiSmallMarginTopBottom">
                                                    <Text text="{BPModel>BP_phone}"/>
                                                </VBox>
                                            </HBox>   
                                        </CustomListItem>    
                                        </List>
                                    </f:content>
                                </f:Card>

                                <layoutData>
                                    <l:GridData span="XL4 L4 M12 S12"/>
                                </layoutData>
                            </VBox>

                            <VBox width="380px" class="sapUiMediumMargin">
                                <f:GridContainer>
                                    <w:Card manifest="{cardManifests>/calendar}" action="onAction">
                                        <w:layoutData>
                                            <f:GridContainerItemLayoutData minRows="4" columns="4" />
                                        </w:layoutData>
                                    </w:Card>
                                </f:GridContainer>


                                <layoutData>
                                    <l:GridData span="XL4 L4 M12 S12"/>
                                </layoutData>
                            </VBox>

                            <VBox width="380px" class="sapUiMediumMargin"> 
                                <GenericTile class="sapUiTinyMarginBegin sapUiTinyMarginTop" press="onNews" frameType="TwoByOne"
                                            backgroundImage="https://newssap.wpenginepowered.com/wp-content/blogs.dir/1/files/281762_GettyImages-460082059_super_low_F-540x310.jpg">
                                    <TileContent>
                                        <NewsContent contentText="Today, SAP News"/>
                                    </TileContent>
                                </GenericTile>

                                <layoutData>
                                    <l:GridData span="XL4 L4 M12 S12"/>
                                </layoutData>
                            </VBox>    
                        </l:Grid>

                    </VBox>

                    
                </HBox>
                
            </content>
        </Panel>
    </ScrollContainer>
</mvc:View>