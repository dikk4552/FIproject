<core:FragmentDefinition 
    xmlns="sap.m" 
    xmlns:core="sap.ui.core" 
    xmlns:form="sap.ui.layout.form" 
    xmlns:t="sap.ui.table" 
    xmlns:layout="sap.ui.layout">
    <Dialog id="CoAHelpDialog" title="계정과목표" contentWidth="800px">
        <content>
            <form:SimpleForm layout="ResponsiveGridLayout">
                <form:content>
                    <HBox>
                        <Input id="CoAHelpInput" placeholder="검색" width="300px" />
                        <layoutData>
                            <layout:GridData span="XL8 L8 M8 S12" />
                        </layoutData>
                    </HBox>
                    <HBox justifyContent="End">
                        <Button text="검색" type="Emphasized" press="onCoASearch" />
                        <Button text="초기화" type="Transparent" press="" class="sapUiTinyMarginBegin" />
                        <layoutData>
                            <layout:GridData span="XL4 L4 M4 S12" />
                        </layoutData>
                    </HBox>
                </form:content>
            </form:SimpleForm>
            <HBox justifyContent="Center">
            <t:Table id="CoAHelpTable" rows="{GLCoA>/}" 
                rowSelectionChange=".oncolumnSelect"
                selectionMode="MultiToggle"
                cellClick=".oncellClickCoA" 
                width="750px">
                <t:extension>
                    <OverflowToolbar>
                        <Title text="항목" />
                    </OverflowToolbar>
                </t:extension>
                <t:columns>
                    <t:Column hAlign="Center">
                        <Label text="계정과목표" />
                        <t:template>
                            <Text text="{GLCoA>CoA_number}" />
                        </t:template>
                    </t:Column>
                    <t:Column hAlign="Center">
                        <Label text="내역" />
                        <t:template>
                            <Text text="{GLCoA>CoA_name}" />
                        </t:template>
                    </t:Column>
                </t:columns>
            </t:Table>
            </HBox>
            <VBox>
                <Label text="선택된 항목 및 조건" labelFor="selectedCoA" class="sapUiMediumMarginBegin"/>
                <MultiInput tokenUpdate=".onTokenchange"
                    id="selectedCoA" width="85%" class="sapUiMediumMarginBegin" showValueHelp="false"
                    tokens="{
                        path: 'tokenmodel>/'
                    }">
                    <tokens>
                        <Token key="{tokenmodel>CoA_number}" text="{tokenmodel>CoA_number}" />
                    </tokens>
                </MultiInput>             
            </VBox>          
        </content>
        <beginButton>
            <Button text="취소" press=".onCloseDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
