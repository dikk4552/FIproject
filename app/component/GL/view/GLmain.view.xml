<mvc:View 
    controllerName="projectGL.controller.GLmain"
    xmlns:mvc="sap.ui.core.mvc" 
    xmlns:f="sap.f"
    xmlns:t="sap.ui.table"
    xmlns:form="sap.ui.layout.form"
    xmlns:layout="sap.ui.layout"
    xmlns="sap.m"
    xmlns:core="sap.ui.core" 
    height="100%">

<f:DynamicPage id="GLmain">

    <f:title>
        <f:DynamicPageTitle >
            <f:heading>
                <HBox>
                    <Title text = "G/L 계정 마스터 조회"/>
                </HBox>
            </f:heading>
        </f:DynamicPageTitle>
    </f:title>
    <f:header>
        <f:DynamicPageHeader pinnable="true">
            <form:SimpleForm layout = "ResponsiveGridLayout">
                <form:content>
                    <VBox>
                        <layoutData>
                            <layout:GridData span = "XL2 L2 M6 S12"/>
                        </layoutData>                
                    </VBox>                
                    <VBox>
                        <Label text = "계정과목표 : "/>
                   		<MultiInput id="GL_coa"
                            showValueHelp="true"
                            valueHelpRequest="onValueHelpRequested"/>
                        <layoutData>
                            <layout:GridData span = "XL2 L2 M6 S12"/>
                        </layoutData>                
                    </VBox>
                    <VBox>
                        <Label text = "G/L 계정 : " />
                        <Input id = "GL_number" />
                        <layoutData>
                            <layout:GridData span = "XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text = "G/L 계정 유형 : " />
                        <Select id = "GL_accttype" width="100%">
                            <core:Item text = "전체"/>
                            <core:Item text = "P (Primary Costs or Revenue)" key="P (Primary Costs or Revenue)"/>
                            <core:Item text = "S (Secondary Costs)" key="S (Secondary Costs)"/>
                            <core:Item text = "X (Balance Sheet Account)" key = "X (Balance Sheet Account)"/>
                            <core:Item text = "N (Nonoperating Expense or Income)" key = "N (Nonoperating Expense or Income)"/>
                            <core:Item text = "C (Cash Account)" key = "C (Cash Account)"/>
                        </Select> 
                        <layoutData>
                            <layout:GridData span = "XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <VBox>
                        <Label text = "계정 그룹 : " />
                        <MultiInput id = "GL_acctgroup"
                            showValueHelp="true"
                            valueHelpRequest="onValueHelpRequested_Group" />
                        <layoutData>
                            <layout:GridData span = "XL2 L2 M6 S12"/>
                        </layoutData>
                    </VBox>
                    <HBox justifyContent="End">
                        <Button text="검색" type="Emphasized" press=".onSearch"/>
                        <Button text="초기화" type="Transparent" press=".onClearField" class="sapUiTinyMarginBegin"/>
                        <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12"/>
                        </layoutData>
                    </HBox>                                                            
                </form:content>
            </form:SimpleForm>
        </f:DynamicPageHeader>
    </f:header>

    <f:content class="sapUiSmallMargin">
        <t:Table id="GLtable"
                rows = "{GLmodel>/}" 
                selectionMode="None"
                rowActionCount="1"
                width="auto" visibleRowCountMode="Auto">
            <t:rowActionTemplate>
                <t:RowAction>
                    <t:items>
                        <t:RowActionItem type = "Navigation" press="onNavToDetail"/>
                    </t:items>
                </t:RowAction>
            </t:rowActionTemplate> 
            <t:extension>
                <OverflowToolbar >
                    <Title id = "TableName"/>
                    <ToolbarSpacer/>
                    <Button
                        text="생성"
                        press="onCreateGL"
                        type="Transparent"/>
                </OverflowToolbar>
            </t:extension>
            <t:columns>
                <t:Column hAlign = "Center">
                    <Label text = "G/L 계정"/>
                    <t:template>
                        <Text text = "{GLmodel>GL_number}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign = "Center">
                    <Label text = "내역"/>
                    <t:template>
                        <Text text = "{GLmodel>GL_shorttext}" />
                    </t:template>
                </t:Column>                
                <t:Column hAlign = "Center">
                    <Label text = "계정과목표"/>
                    <t:template>
                        <Text text = "{GLmodel>GL_coa}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign = "Center">
                    <Label text = "G/L 계정 유형"/>
                    <t:template>
                        <Text text = "{GLmodel>GL_accttype}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign = "Center">
                    <Label text = "계정 그룹"/>
                    <t:template>
                        <Text text = "{GLmodel>GL_acctgroup}" />
                    </t:template>
                </t:Column>
            </t:columns>
        </t:Table>
    </f:content>
</f:DynamicPage>
</mvc:View>
