<mvc:View controllerName="projectDoc.controller.Doccreate" xmlns:mvc="sap.ui.core.mvc" displayBlock="true" xmlns="sap.m" xmlns:f="sap.f" xmlns:form="sap.ui.layout.form" xmlns:layout="sap.ui.layout" xmlns:core="sap.ui.core" xmlns:t="sap.ui.table">
    <f:DynamicPage id="Page" headerExpanded="false" showFooter="true" toggleHeaderOnTitleClick="true">
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button icon="sap-icon://nav-back" press=".onBack" type="Transparent" />
                        <Title text="전표 생성" />
                    </HBox>
                </f:heading>
                <f:actions>
                    <Button type="Emphasized" text="생성" press=".onCreate" />
                    <Button type="Default" text="취소" press=".onBack" />
                </f:actions>
            </f:DynamicPageTitle>
        </f:title>
        <f:content>
            <form:SimpleForm layout="ResponsiveGridLayout">
                <form:content >
                    <VBox width="100%" height="6rem" class="sapUiSmallMarginTop">
                        <OverflowToolbar>
                            <Title text="전표 정보" />
                            <Text id="a" />
                        </OverflowToolbar>

                        <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData>
                    </VBox>

                    <VBox width="50%">
                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="전표 번호 :" />
                            <Text id="Doc_number" />
                        </VBox>
                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="회사코드 :" />
                            <ComboBox id="Doc_cocd" width="100%"
                                    items="{
                                        path: 'CocdModel>/'
                                    }">
                                <core:Item key="{CocdModel>CoCd_number}" text="{CocdModel>CoCd_number}"/>
                            </ComboBox>
                        </VBox>
                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="전기일 :" />
                            <DatePicker id="Doc_postdate" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" />
                        </VBox>
                        <VBox class="sapUiSmallMargin" height="12rem">
                            <Label text="증빙일 :" />
                            <DatePicker id="Doc_docdate" displayFormat="yyyy-MM-dd" valueFormat="yyyy-MM-dd" />
                        </VBox>
                        <layoutData>
                            <layout:GridData span="XL6 L6 M6 S12" />
                        </layoutData>
                    </VBox>

                    <VBox width="50%">
                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="전표 유형 :" />
                            <ComboBox id="Doc_type" width="100%" >
                                <core:Item text="SA" key="SA" />
                                <core:Item text="KZ" key="KZ"/>
                                <core:Item text="DR" key="DR"/>  
                                <core:Item text="DZ" key="DZ" />
                                <core:Item text="KR" key="KR"/>
                                <core:Item text="AA" key="AA"/>  
                                <core:Item text="KG" key="KG"/>  
                                <core:Item text="AA" key="AA"/> 
                             </ComboBox>
                        </VBox>

                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="통화 :" />

                            <ComboBox id="Doc_curr" width="100%" >
                            <core:Item text="USD" key="USD" />
                                <core:Item text="KRW" key="KRW"/>
                                <core:Item text="THB" key="THB"/>  
                                <core:Item text="JPY" key="JPY" />
                                <core:Item text="CNY" key="CNY"/>
                                <core:Item text="VND" key="VND"/>  
                                <core:Item text="RUB" key="RUB"/>  
                                <core:Item text="CAD" key="CAD"/>  
                                <core:Item text="AUD" key="CAUD"/>  
                                <core:Item text="EUR" key="EUR"/>  
                                <core:Item text="QAR" key="QAR"/>  
                                <core:Item text="PLN" key="PLN"/>  
                            </ComboBox>
                        </VBox>
                        <VBox class="sapUiSmallMargin" height="4rem">
                            <Label text="헤더 텍스트 :" labelFor="Doc_text"/>
                            <Input id="Doc_text" required="true"/>
                        </VBox>
                        <VBox class="sapUiSmallMargin" height="12rem">
                            <Label text="참조 :" />
                            <Input id="Doc_ref" />
                        </VBox>
                        <layoutData>
                            <layout:GridData span="XL6 L6 M6 S12" />
                        </layoutData>
                    </VBox>


                    <VBox>
                        <t:Table 
                            id="Docmain" 
                            selectionMode="None" 
                            width="100%" 
                            visibleRowCount="2"
                            rows="{createDoc>/}">
                            <!-- <t:rowActionTemplate>
                <t:RowAction>
                    <t:items>
                        <t:RowActionItem type="Navigation" press=".onNavToDetail" />
                    </t:items>
                </t:RowAction>
            </t:rowActionTemplate> -->
                            
                            <t:extension>
                                <OverflowToolbar class="sapUiLargeMarginBottom">
                                    <Title text="Line items" />
                                </OverflowToolbar>
                            </t:extension>
                            

                            <t:columns >
                                <t:Column width = "5rem" hAlign="Center" >
                                    <Label text="NO." />
                                    <t:template >
                                        <Text id="Doc_NO" text="{createDoc>Doc_NO}"  textAlign="End" />
                                    </t:template>
                                </t:Column>
                                <t:Column width = "5rem" hAlign="Center">
                                    <Label text="C/D" />
                                    <t:template>
                                        <Text id="Doc_CD" text="{createDoc>Doc_CD}" textAlign="Center"/>
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="Account" />
                                    <t:template>
                                        <Input id="Doc_D_acct" value="{createDoc>Doc_D_acct}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="금액" />
                                    <t:template>
                                        <Input id="Doc_D_amount" value="{createDoc>Doc_D_amount}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="Cost Center" />
                                    <t:template>
                                        <Input id="Doc_D_cost" value="{createDoc>Doc_D_cost}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="Profit Center" />
                                    <t:template>
                                        <Input id="Doc_D_prof" value="{createDoc>Doc_D_prof}" />
                                    </t:template>
                                </t:Column>
                                <t:Column hAlign="Center">
                                    <Label text="비고" />
                                    <t:template>
                                        <Input id="Doc_b" value="{createDoc>Doc_b}" />
                                    </t:template>
                                </t:Column>
                            </t:columns>
                        </t:Table>
                        <layoutData>
                            <layout:GridData span="XL12 L12 M12 S12" />
                        </layoutData>
                    </VBox>
                </form:content>
            </form:SimpleForm>
        </f:content>
    </f:DynamicPage>
</mvc:View>
