<mvc:View controllerName="projectBP.controller.BPmain"    
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m"   
    xmlns:f="sap.f" 
    xmlns:form="sap.ui.layout.form"   
    xmlns:layout="sap.ui.layout"
    xmlns:t="sap.ui.table"  
    xmlns:core="sap.ui.core" 
    height="100%"> 

    <f:DynamicPage>
        <f:title>
            <f:DynamicPageTitle>
                <f:heading>
                    <HBox>
                        <Button icon="sap-icon://nav-back" press=".onHome" type="Transparent"  />
                        <Title text= "BP 조회" />
                    </HBox>
                </f:heading>
            </f:DynamicPageTitle>
        </f:title>
            
            <f:header>
                <f:DynamicPageHeader pinnable="true">
                <form:SimpleForm layout="ResponsiveGridLayout">
                    <form:content>  
                        <VBox>
                            <Label text="BP 코드: " />
                            <Input id="BP_number" />
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="BP : " />
                            <Input id="BP_name" />
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="회사 코드 : " />
                            <ComboBox id="BP_cocd" width="100%"
                                    items="{
                                        path: 'CocdModel>/'
                                    }">
                                <core:Item key="{CocdModel>CoCd_number}" text="{CocdModel>CoCd_number}"/>
                            </ComboBox>
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="국가/지역 : " />
                            <Input id="BP_country" 
                                   showValueHelp="true"
			                       valueHelpRequest=".onValueHelpContry"
                                   valueHelpOnly="true"/>
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="우편번호 : " />
                            <Input id="BP_zipcode" />
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="도시 : " />
                            <Input id="BP_city" />
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        <VBox>
                            <Label text="BP 범주 : " />
                            <Select width="100%" id="BP_category">
                                <core:Item text="전체" />
                                <core:Item text="개인" key="개인"/>
                                <core:Item text="조직" key="조직"/>
                            </Select>
                            <layoutData>
                                <layout:GridData span="XL1 L1 M6 S12" />
                            </layoutData>
                        </VBox>
                        
                        <FlexBox justifyContent="End"> 
                            <Button text="검색" type="Emphasized" press=".onSearch" />
                            <Button text="초기화" type="Transparent" press=".onReset" class="sapUiTinyMarginBegin" />
                                <layoutData>
                                    <layout:GridData span="XL12 L12 M12 S12" />
                                </layoutData>
                        </FlexBox>
                    </form:content>   
                </form:SimpleForm>
                </f:DynamicPageHeader>             
            </f:header>

        <f:content class="sapUiSmallMargin">
        <t:Table id="BPmain"
            rows="{BPModel>/}"
            selectionMode="None"
            width="auto"
            rowActionCount="1"
            visibleRowCountMode="Auto">

            <t:rowActionTemplate>
                <t:RowAction>
                    <t:items>
                        <t:RowActionItem type="Navigation" press=".onNavToDetail" />
                    </t:items>
                </t:RowAction>
            </t:rowActionTemplate>

            <t:extension>
                <OverflowToolbar>
                <Title id="TableName"/>
                <ToolbarSpacer />

             	<MenuButton tooltip="생성" useDefaultActionOnly="true" type="Transparent" icon="sap-icon://add-document">
                    <menu>
                        <Menu itemSelected="onMenuAction">
                                    <MenuItem text="Person" press=".onBPCreate($event, 'A')" type="Active"  />
                              
                                    <MenuItem text="Organization" press=".onBPCreate($event, 'B')" type="Active" />
                        </Menu>
                    </menu>
                </MenuButton>
                
                </OverflowToolbar>     
            </t:extension>

            <t:columns>
                        <t:Column hAlign="Center" >
                    <Label  text="BP 코드" />
                    <t:template>
                        <Text text="{BPModel>BP_number}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" >
                    <Label  text="비즈니스 파트너(BP)" />
                    <t:template>
                        <Text text="{BPModel>BP_name}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" >
                    <Label  text="회사 코드" />
                    <t:template>
                        <Text text="{BPModel>BP_cocd}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" >
                    <Label  text="국가/지역" />
                    <t:template>
                        <Text text="{BPModel>BP_country}" />
                    </t:template>
                </t:Column>
                 <t:Column hAlign="Center" >
                    <Label  text="우편번호" />
                    <t:template>
                        <Text text="{BPModel>BP_zipcode}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" >
                    <Label  text="도시" />
                    <t:template>
                        <Text text="{BPModel>BP_city}" />
                    </t:template>
                </t:Column>
                <t:Column hAlign="Center" >
                    <Label  text="비즈니스 파트너(BP) 범주" />
                    <t:template>
                        <Text text="{BPModel>BP_category}" />
                    </t:template>
                </t:Column>   
                

            </t:columns>
        </t:Table>
        </f:content>
    </f:DynamicPage>
  
</mvc:View>